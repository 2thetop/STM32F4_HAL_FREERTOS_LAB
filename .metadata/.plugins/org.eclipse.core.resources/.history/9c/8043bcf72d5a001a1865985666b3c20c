/* USER CODE BEGIN Header_SenderTask */
/**
 * @brief  Function implementing the Sender thread.
 * @param  argument: Not used
 * @retval None
 */
/* USER CODE END Header_SenderTask */
void SenderTask(void *argument)
{
  /* USER CODE BEGIN SenderTask */
	_Message msg;
	msg.buf[0] = 0xAA;
	msg.idx = 0;

	/* Infinite loop */
	for (;;)
	{
		printf("Sender enqueues %u\n", cnt);
		osMessageQueuePut(Queue1Handle, &msg, 0, 200); //enqueue
		msg.idx++;
		printf("Sender delays for a sec.\n");
		osDelay(1000);
	}
  /* USER CODE END SenderTask */
}

/* USER CODE BEGIN Header_ReceiverTask */
/**
 * @brief Function implementing the Receiver thread.
 * @param argument: Not used
 * @retval None
 */
/* USER CODE END Header_ReceiverTask */
void ReceiverTask(void *argument)
{
  /* USER CODE BEGIN ReceiverTask */
	_Message msg;
	osStatus status;

	/* Infinite loop */
	for (;;)
	{
		printf("Receiver is trying to dequeue\n");
		status = osMessageQueueGet(Queue1Handle, &msg, 0, 1000); //dequeue
		if(status == osOK)
		{
			printf("Receiver received: msg.buf[0]=%x, msg.idx=%u\n", msg.buf[0], msg.idx);
		}
	}
  /* USER CODE END ReceiverTask */
}

